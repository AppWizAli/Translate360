<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.hiskytechs.translate360.Fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_up"/>
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hiskytechs.translate360.Fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_textTranslateFragment"
            app:destination="@id/textTranslateFragment" />
        <action
            android:id="@+id/action_homeFragment_to_bookMarkFragment"
            app:destination="@id/bookMarkFragment" />
    </fragment>
    <fragment
        android:id="@+id/textTranslateFragment"
        android:name="com.hiskytechs.translate360.Fragments.TextTranslateFragment"
        android:label="fragment_text_translate"
        tools:layout="@layout/fragment_text_translate" />
    <fragment
        android:id="@+id/bookMarkFragment"
        android:name="com.hiskytechs.translate360.BookMarkFragment"
        android:label="fragment_book_mark"
        tools:layout="@layout/fragment_book_mark" />
</navigation>